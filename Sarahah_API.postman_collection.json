{
  "info": {
    "name": "Sarahah App API",
    "description": "Complete API collection for Node.js Sarahah-like anonymous messaging application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123\",\n  \"confirmPassword\": \"SecurePass123\",\n  \"username\": \"johndoe\",\n  \"phone\": \"1234567890\",\n  \"age\": 25\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signUp",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signUp"]
            }
          }
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/verify-email/:token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-email", ":token"],
              "variable": [
                {
                  "key": "token",
                  "value": "your-verification-token"
                }
              ]
            }
          }
        },
        {
          "name": "Sign In",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);",
                  "pm.collectionVariables.set(\"refreshToken\", jsonData.refreshToken);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signIn",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signIn"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "refreshtoken",
                "value": "{{refreshToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/refreshtoken",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refreshtoken"]
            }
          }
        },
        {
          "name": "Sign Out",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "accesstoken",
                "value": "{{accessToken}}"
              },
              {
                "key": "refreshtoken",
                "value": "{{refreshToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/signout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signout"]
            }
          }
        },
        {
          "name": "Forget Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/forgetpassword",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "forgetpassword"]
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"your-otp-from-email\",\n  \"password\": \"NewSecurePass123\",\n  \"confirmpassword\": \"NewSecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/resetpassword",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "resetpassword"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "accesstoken",
                "value": "{{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user/profile",
              "host": ["{{baseUrl}}"],
              "path": ["user", "profile"]
            }
          }
        },
        {
          "name": "Update Password",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "accesstoken",
                "value": "{{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"oldPassword\": \"OldSecurePass123\",\n  \"newPassword\": \"NewSecurePass123\",\n  \"confirmNewPassword\": \"NewSecurePass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/user/updatepassword",
              "host": ["{{baseUrl}}"],
              "path": ["user", "updatepassword"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "accesstoken",
                "value": "{{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newusername\",\n  \"phone\": \"9876543210\",\n  \"email\": \"newemail@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/user/updateprofile",
              "host": ["{{baseUrl}}"],
              "path": ["user", "updateprofile"]
            }
          }
        },
        {
          "name": "List All Users (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "accesstoken",
                "value": "{{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user/listuser",
              "host": ["{{baseUrl}}"],
              "path": ["user", "listuser"]
            }
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"body\": \"This is an anonymous message\",\n  \"ownerId\": \"507f1f77bcf86cd799439011\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/message/send-message",
              "host": ["{{baseUrl}}"],
              "path": ["message", "send-message"]
            }
          }
        },
        {
          "name": "Get All Messages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/message/get-messages",
              "host": ["{{baseUrl}}"],
              "path": ["message", "get-messages"]
            }
          }
        },
        {
          "name": "Get User Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "accesstoken",
                "value": "{{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/message/get-user-messages",
              "host": ["{{baseUrl}}"],
              "path": ["message", "get-user-messages"]
            }
          }
        }
      ]
    }
  ]
}
